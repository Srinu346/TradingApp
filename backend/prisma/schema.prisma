
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int @id @default(autoincrement())
  firstName    String @default("User")
  lastName     String @default("User")
  username      String  @unique
  email         String  @unique
  password      String
  balance       Float   @default(0)
  createdAt     DateTime @default(now())
  stocks        Stocks[]
}

model Stocks {
  id       Int     @id @default(autoincrement())
  symbol    String  
  name      String  
  avgprice     Float
  quantity    Int
  userId      String
  user        User @relation(fields: [userId], references: [username], onDelete: Cascade)
}

model MasterStocks {
  id      Int     @id @default(autoincrement())
  symbol    String  @unique
  name      String
  currentPrice     Float
  priceHistory Json? @default("[]")
  type      String
  market String @default("NSE")
}